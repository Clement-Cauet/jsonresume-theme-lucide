{{#if resume.references.length}}
<section id="references" class="section">
    <h2 class='section-title'>References</h2>
    {{#each resume.references}}
    <div class="item">
        {{#if reference}}
        <blockquote class="reference">
            &#8220;&#32;{{reference}}&#32;&#8221;
        </blockquote>
        {{/if}}
        {{#if name}}
        <p class="name">
            {{name}}
        </p>
        {{/if}}
    </div>
    {{/each}}
</section>
{{/if}}